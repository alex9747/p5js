<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.js"></script>
    <script>
      function setup() {
  createCanvas(700, 700);
}

function draw() {
   fill("black")// warning text 
  textSize(40)
  text("EPILEPSY WARNING!",200,50);
  
}

function mouseMoved(){
  //legs
  fill(239,198,160);
  stroke(254,218,165);
rect(mouseX,mouseY,40,150);
	rect(mouseX,mouseY,40,150);
  //head
  fill(255,0,0);
  ellipse(mouseX,mouseY,200,200);
//white part of eye
  fill(255,255,255);
  ellipse(mouseX,mouseY,60,70);
  ellipse(mouseX,mouseY,60,70);
//black part of eye
  fill(0,0,0);
  ellipse(mouseX,mouseY,25,25);
  ellipse(mouseX,mouseY,25,25);
//mouth
  fill(0,0,0);
  ellipse(mouseX,mouseY,150,50);
}
function keyPressed() {

    strokeWeight(8);
   line(mouseX,mouseY,0,0);// points placed on corners of the screen
 line(mouseX,mouseY,700,0);// when the key is pressed once it turns on the strokeWeight 
line(mouseX,mouseY,0,700);// then it goes to where the mouse is 
   line(mouseX,mouseY,700,700);
 }
   function mouseDragged() {
     background(random(255),random(255),random(255));//it changes color everytime 
     fill(random(255),random(255),random(255));//when the square is moved
     rect(mouseY,mouseX,200,200);
     rect(mouseY,mouseY,150,150);
     rect(mouseY,mouseX,100,100);
   }
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/alex9747/p5js/blob/master/InteractionProject.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


